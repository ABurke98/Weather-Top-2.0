<div class="ui inverted segment">           <!--Our latest weather cards that are displayed when in a station view-->
    <div class="ui inverted five cards">
    <div class="card">
        <div class="extra">
            <h1>{{name}}</h1> <i class="red huge map marker icon"></i>                   <!--Getting data from the station model to display on the card-->
            <h4>Latitude : {{station.lat}} <br> Longitude : {{station.lon}}  </h4>
        </div>
    </div>
    <div class="card">
        <div class="extra">
            <h3> Weather </h3> <i class="blue ${_station.weatherIcon()}"></i>   <!--Getting data from the station model to display on the card-->
            <h4> {{latestReports.code}} </h4>
        </div>
    </div>
    <div class="card">
        <div class="extra">
            <h3> Temp </h3> <i class="${_station.tempIcon()}"></i> <i class="blue ${_station.tempTrendIcon()}"> </i>  <!--Getting data from the station model to display on the card-->
            <h4> {{latestReports.temp}}째c <br>
            {{tempF}} <br> Max Temp : {{maxTemp}}째 c <br> Min Temp : {{minTemp}}째c</h4>
        </div>
    </div>
    <div class="card">
        <div class="extra">
            <h3> Wind </h3> <i class="huge green wind icon"></i> <i class="green ${_station.windTrendIcon()}"></i>  <!--Getting data from the station model to display on the card-->
            <h4> {{beaufort}} bft <br> ${_station.getWindDir()} <br> Feels Like : {{windChill}} 째c
                <br> Max Wind : {{maxWind}} kph <br> Min Wind : {{minWind}} kph  </h4>
        </div>
    </div>
    <div class="card">
        <div class="extra">
            <h3> Pressure </h3> <i class="orange huge compress arrows alternate icon"></i><i class="orange ${_station.pressureTrendIcon()}"></i> <!--Getting data from the station model to display on the card-->
            <h4> ${_station.getLatestPressure()} hPa <br> Max Pressure : ${_station.getmaxP()} hpa <br> Min Pressure : ${_station.getminP()} hpa  </h4>
        </div>
    </div>
</div>
</div>


<table class="ui table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>  
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{code}}
        </td>
        <td>
          {{temp}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{windDirection}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>