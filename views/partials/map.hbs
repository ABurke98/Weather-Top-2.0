<!--leafletjs script for displaying tiles and map information on the station dashboard using the mapbox API as well as OpenStreetMap-->
 <div id="map">

    <script type="text/javascript">
var mymap = L.map('map').setView([{{station.lat}}, {{station.lon}}], 13);
      var marker = L.marker([{{station.lat}}, {{station.lon}}]).addTo(mymap);
      marker.bindPopup("<b>{{station.name}}</b><br>Lat :{{station.lat}}<br> Lon :{{station.lon}}").openPopup();
      
    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
    maxZoom: 18,
    id: 'mapbox/streets-v11',
    tileSize: 512,
    zoomOffset: -1,
    accessToken: 'pk.eyJ1IjoiYWJ1cmtlOTgiLCJhIjoiY2t0ZTV4Z3M5Mm1mbzJ2bGFiaTIzYjd4aiJ9.ui1vNGlwpOcAINg-BXUqAg'
}).addTo(mymap);
    </script>
   
   </div>

